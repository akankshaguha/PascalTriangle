

object Pascaltriangle{

def fact(a:Int):Int = {
  if(a<=0) 1
  else a*fact(a-1)
}
  def pascal(c:Int,r:Int):Int={
  
if (c == 0 || c == r) 1
    else pascal(c - 1, r - 1) + pascal(c, r - 1)
    
   
  }
  
  def main(args:Array[String]){
    for(r <-0 to 10){
      for(c <- 0 to r){
        print(pascal(r,c) +"")
      }
      println()
   // }
   

    }
  }
}